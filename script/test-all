#!/bin/bash
source bin/adder

trap print_red_or_green_bar EXIT
print_red_or_green_bar() {
    if [[ "$any_failure" == true ]]
    then
        echo "$(tput setaf 1)FAIL$(tput sgr0)"
    else
        echo "$(tput setaf 2)PASS$(tput sgr0)"
    fi
}

assert_equal() {
    if [[ "$1" != "$2" ]]
    then
        >&2 echo "Failed at line: ${BASH_LINENO[0]}"
        >&2 echo "Expected: $1"
        >&2 echo "     got: $2"
        expected="$1"
        actual="$2"
        declare -p expected
        declare -p actual
        any_failure=true
        return 1
    fi
}

assert_equal 1 1
assert_equal 2 2 

assert_equal 0 "$(adder '')"
assert_equal 10 "$(adder '10')"
assert_equal 7 "$(adder '3,4')"
assert_equal 13 "$(adder '3,4,6')"
assert_equal 20 "$(adder '3,4,6,7')"

assert_equal '' "$(source bin/adder)"
assert_equal '0' "$(bin/adder)"
assert_equal '100' "$(bin/adder "10,20,30,40" )"

