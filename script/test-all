#!/bin/bash

assert_equal() {
    local expected="$1"
    local actual="$2"
    diff -u  <(echo "$expected") <(echo "$actual")
}

add-numbers() {
    IFS=, read -ra numbers <<< "$1"
    local sum=0
    for number in "${numbers[@]}"
    do
        ((sum=sum+number))
    done
    echo "$sum"
}

assert_equal 1 "$(
add-numbers "1"
)"

assert_equal 3 "$(
add-numbers "1,2"
)"

assert_equal '5' "$(
add-numbers "1,4"
)"

assert_equal '6' "$(
add-numbers "1,2,3"
)"

assert_equal '10' "$(
add-numbers "1,2,3,4"
)"

# assert_equal '3' "$(
# add-numbers "1
# 2"
# )"
