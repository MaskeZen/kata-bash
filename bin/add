#!/bin/bash

main() {
    if [[ -z "$1" ]]
    then
        say_nothing
    else
        split_numbers "$1"
        sum-all "${numbers[@]}"
    fi
}

say_nothing() {
    :
}

split_numbers() {
    IFS=, read -ra numbers <<< "$1"
}

sum-all() {
    local sum=0
    for n in "$@"; do
        ((sum+=n))
    done
    echo "$sum"
}

main "$@"
