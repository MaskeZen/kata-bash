#!/bin/bash

add() {
    split_to_numbers "$1" numbers
    sum_numbers "${numbers[@]}"
}

split_to_numbers() {
    IFS=, read -ra "$2" <<< "$1"
}

sum_numbers() {
    local sum=0
    for number in "$@"
    do
        ((sum+=number))
    done
    echo "$sum"
}

[[ "$BASH_SOURCE" == "$0" ]] && add "$@"
