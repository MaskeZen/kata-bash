#!/bin/bash
add() {
    split_by_comma_in_to "numbers" "$1"
    echo "$(sum-all "${numbers[@]}")"
}

split_by_comma_in_to() {
    local array_name="$1"
    local string_to_split="$2"
    IFS=, read -ra "$array_name" <<< "$string_to_split"
}

sum-all() {
    local sum=0
    for number in "$@"; do
        ((sum+=number))
    done
    echo "$sum"
}

[[ "${BASH_SOURCE[0]}" == "$0" ]] && add "$@"
